  <body class="with-welcome-text">
    <div class="container-scroller">
      
      <!-- partial:partials/_navbar.html -->
      

      

  <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex align-items-top flex-row">
    <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start">
      <div class="me-3">
        <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-bs-toggle="minimize">
          <span class="icon-menu"></span>
        </button>
      </div>
      <div>
        <a class="navbar-brand brand-logo" href="/admin/admindashboard">
          <img src="../assets/images/logo.svg" alt="logo" />
        </a>
        <a class="navbar-brand brand-logo-mini" href="../index.html">
          <img src="../assets/images/logo-mini.svg" alt="logo" />
        </a>
      </div>
    </div>
    <div class="navbar-menu-wrapper d-flex align-items-top">
      <ul class="navbar-nav">
        <li class="nav-item fw-semibold d-none d-lg-block ms-0">
          <h1 class="welcome-text">Welcome to Admin Dashboard  <span class="text-black fw-bold"></span></h1>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto">
        
        <li class="nav-item d-none d-lg-block">
          <div id="datepicker-popup" class="input-group date datepicker navbar-date-picker">
            <span class="input-group-addon input-group-prepend border-right">
              <span class="icon-calendar input-group-text calendar-icon"></span>
            </span>
            <input type="text" class="form-control">
          </div>
        </li>
       
        <li class="nav-item dropdown d-none d-lg-block user-dropdown">
          <a class="nav-link" id="UserDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
            <img class="img-xs rounded-circle" src="../assets/images/faces/face8.jpg" alt="Profile image"> </a>
          <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="UserDropdown">
            <div class="dropdown-header text-center">
              <img class="img-md rounded-circle" src="../assets/images/faces/face8.jpg" alt="Profile image">
              <p class="mb-1 mt-3 fw-semibold"><%=data.username%></p>
              <p class="fw-light text-muted mb-0"><%=data.email%></p>
            </div>
            <a class="dropdown-item" href="/admin/logoutuser"><i class="dropdown-item-icon mdi mdi-power text-primary me-2"></i>Sign Out</a>
            <a class="dropdown-item btn btn-warning text-white mb-1" href="/admin/updatepass/<%=data._id%>"><i class="fa-solid fa-key"></i>update password</a>
          </div>
        </li>
      </ul>
      
      <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-bs-toggle="offcanvas">
        <span class="mdi mdi-menu"></span>
      </button>
    </div>
  </nav>

      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <%- include('../layouts/sidebar')%>
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <!-- Card Section -->
                <div class="row" style="display: flex; flex-wrap: wrap; justify-content: space-between;">
    
                    <!-- Total Products Card -->
                    <div class="col-md-4" style="width: 32%; margin-bottom: 20px;">
                        <a href="/admin/allproducts" style="display: block; text-decoration: none;">
                            <div class="card" style="height: 250px; background-color: #fff; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); display: flex; flex-direction: column; justify-content: space-between;">
                                <div class="card-body" style="padding: 20px;">
                                    <h4 class="card-title" style="margin: 0;">Total Products</h4>
                                    <p class="card-description" style="margin-top: 10px;">
                                        <strong id="total-products"><%=productCount%></strong>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
    
                    <!-- Total Categories Card -->
                    <div class="col-md-4" style="width: 32%; margin-bottom: 20px;">
                        <a href="/admin/allcategory" style="display: block; text-decoration: none;">
                            <div class="card" style="height: 250px; background-color: #fff; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); display: flex; flex-direction: column; justify-content: space-between;">
                                <div class="card-body" style="padding: 20px;">
                                    <h4 class="card-title" style="margin: 0;">Total Categories</h4>
                                    <p class="card-description" style="margin-top: 10px;">
                                        <strong id="total-categories"><%=categorydata%></strong>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
    
                    <!-- Total Users Card -->
                    <div class="col-md-4" style="width: 32%; margin-bottom: 20px;">
                        <a href="/admin/alluser" style="display: block; text-decoration: none;">
                            <div class="card" style="height: 250px; background-color: #fff; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); display: flex; flex-direction: column; justify-content: space-between;">
                                <div class="card-body" style="padding: 20px;">
                                    <h4 class="card-title" style="margin: 0;">Total Users</h4>
                                    <p class="card-description" style="margin-top: 10px;">
                                        <strong id="total-users"><%=userCount%></strong>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
    
                </div>
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- main-panel ends -->
    </div>
    
    
    
      <!-- page-body-wrapper ends -->
       
    </div>
    <%-include('../layouts/footer')%>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
