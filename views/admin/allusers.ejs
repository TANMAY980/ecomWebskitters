        </nav>
        
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <!-- Card Section -->
            <section class="content">
              <div class="container">
                  <table class="table">
                      <thead>
                        <tr>
                          <th scope="col">user_id</th>
                          <th scope="col">user_unique_id</th>
                          <th scope="col">name</th>
                          <th scope="col">user_email</th>
                          <th scope="col">user_name</th>
                          <th scope="col">user_role</th>
                          <th scope="col">is_verified</th>

                          <th scope="col"colspan=2> Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
      
                          <% let id = 1; %>
                          <% if (data  && data.length > 0) { %>
                            <% data.forEach(record=> { %>
                              <tr>
                                <th scope="row"><%= id++ %></th>
                                <td><%= record._id.toString().slice(6,-1) %></td>
                                <td><%= record.name %></td>
                                <td><%= record.email %></td>
                                <td><%= record.username %></td>
                                <td><%= record.role %></td>
                                <td><%= record.is_verified %></td>
                                <td>
                                  <td>
                                    <!-- Edit Button -->
                                    <!-- Delete Button -->
                                    <a href="/admin/deleteuser/<%= record._id %>" class="btn btn-danger btn-sm">Delete</a>
      
                                </td>
                                </td>

                              </tr>
                            <% }) %>
                          <% } else { %>
                            <tr>
                              <td colspan="5" class="text-center">No data available</td>
                            </tr>
                          <% } %>
                          
                        </tr>      
                      </tbody>
                    </table>
              </div>
          </section>
