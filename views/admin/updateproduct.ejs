      <div class="container-fluid page-body-wrapper">
        <%- include('../layouts/sidebar')%>
        <div class="container">
        <form action="/admin/updateproduct/<%=data._id%>"enctype="multipart/form-data" method="post" enctype="multipart/form-data" class="col-md-4 mt-3 mx-auto p-5 shadow rounded-4" style="background-color: #f2f0f3; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); border-radius: 10px;">
            <h1 class="text-center">Update Product</h1>
            <div class="form-group mt-2">
                <label for="exampleInputEmail1" class="fw-bold">productName</label>
                <input type="text" name="productName" value="<%= data.productName %>" class="form-control"  placeholder="Enter productName" required>
              </div> 
            <div class="form-group mt-2">
                <label for="exampleInputEmail1" class="fw-bold">product price</label>
                <input type="text" name="price"  value="<%= data.price %>" class="form-control"  placeholder="enter product price" required>
              </div>
            <div class="form-group mt-2">
                <label for="exampleInputEmail1" class="fw-bold">product stock</label>
                <input type="text" name="stock" value="<%= data.stock %>" class="form-control" placeholder="Enter stock" required>
            </div>
            <div class="form-group mt-2">
                <label for="exampleInputEmail1" class="fw-bold">product description</label>
                <input type="text" name="description" value="<%= data.description %>" class="form-control" placeholder="Enter product description" required>
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1" class="fw-bold">Product Category</label>
              <select class="form-control" id="exampleFormControlSelect1" name="categoryId" required>
                <% categorydata.forEach(category => { %>
                    <option value="<%= category._id %>" <%= category._id == data.categoryId ? 'selected' : '' %>><%= category.name %></option>
                <% }); %>
            </select>
            </div>
            <div class="form-group mt-2">
                <label for="exampleInputEmail1" class="fw-bold">product image</label>
                <input type="file" name="image" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary mt-3 d-block mx-auto">update Product</button>
          </form> 
