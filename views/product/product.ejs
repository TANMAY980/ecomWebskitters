<section class="content">
  <div class="container">
    <!-- Search Form -->
    <form action="/searchproduct" method="GET" class="mb-4">
      <div class="row">
        <!-- Search by Name -->
        <div class="col-md-4">
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Search by Name"
            value=""
          />
        </div>
        <!-- Search by Category Dropdown -->
        <div class="col-md-4">
          <select name="category" class="form-control">
            <option value="" selected>Search by Category</option>
            <% if (categorydata  && categorydata .length > 0) { %>
              <% categorydata .forEach(category => { %>
                <option value="<%= category._id %>"><%= category.name %></option>
              <% }) %>
            <% } else { %>
              <option value="" disabled>No categories available</option>
            <% } %>
          </select>
        </div>


        <!-- Search by Price Range -->
        <div class="col-md-4 d-flex">
          <input
            type="number"
            name="minPrice"
            class="form-control me-2"
            placeholder="Min Price"
            value=""
          />
          <input
            type="number"
            name="maxPrice"
            class="form-control"
            placeholder="Max Price"
            value=""
          />
        </div>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Search</button>
    </form>
  </div>

  <!-- Card Grid -->
  <div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      <% if (data && data.length > 0) { %>
        <% data.forEach((product) => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <img
                src="<%=product.image %>"
                class="card-img-top"
                alt="<%= product.productName %>"
                style="height: 200px; object-fit: cover;"
              />
              <div class="card-body">
                <h2 class="card-title text-center"><%= product.productName.slice(0,30) %></h2>
                <p class="card-text text-center">desc: <%= product.description.slice(0,50) %></p>
                <h3 class="text-center">â‚¹<%= product.price%></h3>
                <button type="submit" class="btn btn-warning mt-3 d-block mx-auto">Add to Cart</button>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col">
          <p class="text-center">No products available.</p>
        </div>
      <% } %>
    </div>
  </div>
